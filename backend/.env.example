# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/mentorship_db?schema=public"

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:5173

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Email Configuration (Gmail SMTP)
# To set up Gmail:
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Generate an App Password at https://myaccount.google.com/apppasswords
# 3. Copy the 16-character password and paste below
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=xxxx xxxx xxxx xxxx
EMAIL_FROM_NAME=MentorConnect

# For other email providers, use these settings instead:
# EMAIL_HOST=smtp.provider.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@provider.com
# EMAIL_PASSWORD=your-password