# Production Environment Variables for Backend
# Copy this to .env in your backend folder and fill in actual values

# Database
DATABASE_URL="postgresql://username:password@hostname:5432/database"

# JWT Secret (MUST be at least 32 characters - generate a strong one!)
JWT_SECRET="CHANGE_THIS_TO_A_STRONG_SECRET_KEY_MIN_32_CHARACTERS"

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (update after deploying frontend)
FRONTEND_URL="https://your-app-name.vercel.app"
CORS_ORIGIN="https://your-app-name.vercel.app"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (optional - for future use)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@mentorship.com

# Session Configuration
SESSION_SECRET="CHANGE_THIS_TO_ANOTHER_STRONG_SECRET_KEY"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=60000
